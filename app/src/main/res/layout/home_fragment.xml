<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightgray">

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:id="@+id/officer_card"
    android:layout_marginTop="@dimen/size_20dp"
    android:layout_marginLeft="@dimen/size_10dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="@dimen/size_150dp"
        android:layout_height="@dimen/size_150dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:layout_gravity="center"
            android:src="@drawable/officer"/>
        <TextView
            android:id="@+id/myTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Officer Account"
            android:textSize="@dimen/size_16dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view_officer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="@dimen/size_150dp"
            android:layout_height="@dimen/size_150dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_100dp"
                android:src="@drawable/view_bg"
                android:layout_gravity="center"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Officer Account"
                android:textSize="@dimen/size_16dp"
                android:textAlignment="center"
                android:textColor="@color/black"

                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:id="@+id/white_card_layout"
        android:layout_below="@+id/officer_card"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="@dimen/size_150dp"
            android:layout_height="@dimen/size_150dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_100dp"
                android:src="@drawable/white_card"
                android:layout_gravity="center"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create White Card user"
                android:textSize="@dimen/size_16dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view_white_card_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/view_officer_layout"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="@dimen/size_150dp"
            android:layout_height="@dimen/size_150dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_100dp"
                android:layout_gravity="center"
                android:src="@drawable/view_white_card"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Officer Account"
                android:textSize="@dimen/size_16dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:id="@+id/view_card_info_layout"
        android:layout_below="@+id/white_card_layout"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="@dimen/size_150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_5dp"
                android:src="@drawable/view_card_info"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Card Info"
                android:textSize="@dimen/size_16dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_status_layout"
        android:layout_width="@dimen/size_150dp"
        android:layout_height="150dp"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/view_white_card_layout"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_100dp"
                android:layout_gravity="center"
                android:src="@drawable/view_card_info"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card Status"
                android:textSize="@dimen/size_16dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>