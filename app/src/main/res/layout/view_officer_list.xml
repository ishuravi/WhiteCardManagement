<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:id="@+id/item_layout"
        android:backgroundTint="@color/white"

        app:cardCornerRadius="@dimen/size_8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:id="@+id/layout"
            android:padding="@dimen/size_5dp"
            >
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name : "
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_toRightOf="@+id/txt"
                android:textSize="16sp"
                android:layout_toLeftOf="@+id/txt3"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:layout_toLeftOf="@+id/email_txt"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:padding="@dimen/size_5dp"
           >
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone : "
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone"
                android:layout_toRightOf="@+id/txt2"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID :"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:layout_toLeftOf="@+id/id_txt"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>



        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"

                android:padding="@dimen/size_5dp">
                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation : "
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/Designation_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation"
                    android:layout_toRightOf="@+id/txt4"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department :"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:layout_toLeftOf="@+id/department_txt"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/department_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>